<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>email</param-name>
        <param-value>hacker@163.com</param-value>
    </context-param>
    <context-param>
        <param-name>telephone</param-name>
        <param-value>8899123</param-value>
    </context-param>
    <servlet>
        <servlet-name>configDemoServlet</servlet-name>
        <servlet-class>com.demo.ConfigDemoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>configDemoServlet</servlet-name>
        <url-pattern>/configDemo.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServerInfo</servlet-name>
        <servlet-class>com.demo.ServerInfo</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServerInfo</servlet-name>
        <url-pattern>/com.demo.ServerInfo.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>com.demo.FirstServlet</servlet-class>
    </servlet>
<servlet-mapping>
    <servlet-name>FirstServlet</servlet-name>
    <url-pattern>/com.demo.FirstServlet.do</url-pattern>
</servlet-mapping>
    <servlet>
        <servlet-name>SecondServlet</servlet-name>
        <servlet-class>com.demo.SecondServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SecondServlet</servlet-name>
        <url-pattern>/com.demo.SecondServlet.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>input.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ShowSession</servlet-name>
        <servlet-class>com.demo.ShowSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowSession</servlet-name>
        <url-pattern>/com.demo.ShowSession.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SendCookie</servlet-name>
        <servlet-class>test.SendCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendCookie</servlet-name>
        <url-pattern>/test.SendCookie.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetCookie</servlet-name>
        <servlet-class>test.GetCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCookie</servlet-name>
        <url-pattern>/test.GetCookie.do</url-pattern>
    </servlet-mapping>
</web-app>